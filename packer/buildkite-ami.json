{
  "variables": {
    "agent_release_stream": null
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-08111162",
      "region": "us-east-1",
      "instance_type": "c4.large",
      "ssh_username": "ec2-user",
      "ami_name": "buildkite-aws-stack-{{user `agent_release_stream` | clean_ami_name}}-{{isotime | clean_ami_name}}",
      "ami_description": "A basic image with a Buildkite agent running",
      "ami_groups": ["all"]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "conf",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "script": "scripts/install-cloudwatch-logs.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-docker.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-buildkite.sh",
      "environment_vars": ["AGENT_RELEASE_STREAM={{user `agent_release_stream`}}"]
    },
    {
      "type": "shell",
      "script": "scripts/install-lifecycled.sh"
    }
  ]
}
