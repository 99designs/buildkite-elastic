{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-cf09e8a4",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "buildkite-{{isotime | clean_ami_name}}",
      "ami_description": "A buildkite agent and docker host based off Ubuntu 15.04",
      "ami_groups": ["all"]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "conf",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "script": "scripts/install-cfn-tools.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-docker.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-buildkite.sh"
    }
  ]
}